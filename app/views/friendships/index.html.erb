<% unless @pending.empty? %>
  <div class="row small-up-1 medium-up-2 large-up-4" id="user-grid">
    <% for friend in @pending %>
      <div class="column user-block">
        <h5><%= link_to friend.name, user_path(friend) %></h5>
        <%= link_to gravatar_for(friend, options = { size: 120 }), user_path(friend) %>
        <p><%= link_to '<i class="fi-check"></i> Confirm friend'.html_safe, friend_path(friend), method: :put %></p>
      </div>

    <% end %>
  </div>
<% end %>

<h1>All friends</h1>

<%= will_paginate @friends, renderer: FoundationPagination::Rails %>

<div class="row small-up-1 medium-up-2 large-up-4" id="user-grid">
<% for friend in @friends %>
  <div class="column user-block">
    <h5><%= link_to friend.name, user_path(friend) %></h5>
    <%= link_to gravatar_for(friend, options = { size: 120 }), user_path(friend) %>
  </div>

<% end %>
</div>

