<table class="comment-form">
  <tr>
    <td class="comment-field">
  <%= form_for(post.comments.build, url: post_comments_path(post.id), method: "post") do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
  <%= f.text_area :content, placeholder: "Have a comment?", class: "comment-text" %></td>
    <td><%= f.submit "Comment", class: "button" %></td>
  </tr>
</table>
<% end %>
