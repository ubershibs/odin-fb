<nav class="top-bar">
  <div class="top-bar-left">
    <ul class="dropdown menu" data-dropdown-menu>
      <li><%= link_to "OdinFB", root_url %></li>
      <% if user_signed_in? %>
        <li><%= link_to "Directory", users_path %></li>
        <li>
          <a href="#"><%= current_user.name %></a>
          <ul class="menu vertical">
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Friends", friends_path %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    <% end %>
  </div>
  <div class="top-bar-right">
    <ul class="dropdown menu" data-dropdown-menu>
      <% if user_signed_in? %>
      <li data-behavior="notifications" data-notifications='<%= render template: "notifications/index", formats: [:json] %>'>
          <a data-behavior="notifications-link">
            <i class="fi-flag"></i><span class="badge" data-behavior="unread-count"></span></a>
        <ul class="menu vertical" data-behavior="notification-items">
        </ul>
      </li>
      <% end %>
    </ul>
  </div>
